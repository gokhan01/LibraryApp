@model IEnumerable<LibraryApp.Models.Book>

@{
    ViewData["Title"] = "Kitaplar";
}

<h4>Kitaplar</h4>

<p>
    <a asp-action="Create">Kitap Girişi</a>
</p>
<form id="authorForm" method="get" class="col-md-4" style="padding-left:0">
    <select class="form-control" asp-items="ViewBag.AuthorId" onchange="submitForm()" name="authorId">
        <option>Tüm Yazarlar</option>
    </select>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function submitForm() {
        $("#authorForm").submit();
    }
</script>